{
	"title": "Web Extension for a11y.css",
	"name": "a11ycss-webextension",
	"description": "Chromium and Firefox web extension for a11y.css",
	"version": "2.0.0",
	"author": {
		"name": "GaÃ«l Poupard",
		"url": "https://www.ffoodd.fr",
		"email": "gael+npm@ffoodd.fr"
	},
	"keywords": [
		"a11y",
		"accessibility",
		"accessibility-checker",
		"testing",
		"css",
		"webextension",
		"firefox",
		"chromium",
		"chrome"
	],
	"scripts": {
		"start": "concurrently --kill-others \"npm:watch:*\"",
		"preversion": "npm t",
		"version": "json -I -f manifest-firefox.json -e \"this.version='$npm_package_version'\" && json -I -f manifest-chrome.json -e \"this.version='$npm_package_version'\" && npm run webext && git add .",
		"test": "concurrently \"npm:lint:*\"",
		"lint:styles": "stylelint \"./sass/**/*.scss\"",
		"lint:ext": "cross-env-shell web-ext lint -s $npm_package_name-$npm_package_version-firefox.zip",
		"build:css": "sass sass/:css/ -s compressed --load-path=node_modules --source-map --no-error-css",
		"postbuild:css": "postcss css/*.css -r -m -u autoprefixer cssnano",
		"watch:css": "sass sass/:css/ -s compressed --load-path=node_modules --source-map --no-error-css -w",
		"prewebext": "shx rm -rf temp && shx rm -rf css/a11y-*.css && shx cp -r node_modules/a11y.css/css/a11y-*_*.css ./css",
		"webext:cp": "shx cp -r node_modules/a11y.css/css/a11y-??.css temp && shx cp -r node_modules/a11y.css/css/a11y-?????.css temp",
		"webext:rename": "cd temp && rename 's/a11y-(.{2,5}).*(.css)$/a11y-$1_all$2/' *.css && cd ..",
		"webext:mv": "shx cp temp/*.css css",
		"webext": "shx mkdir temp && npm run webext:cp && npm run webext:rename && npm run webext:mv",
		"postwebext": "npm run webext:firefox && npm run webext:chrome",
		"prewebext:firefox": "shx cp manifest-firefox.json manifest.json",
		"webext:firefox": "cross-env-shell web-ext build -n $npm_package_name-$npm_package_version-firefox.zip",
		"prewebext:chrome": "shx cp manifest-chrome.json manifest.json",
		"webext:chrome": "cross-env-shell web-ext build -n $npm_package_name-$npm_package_version-chrome.zip"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ffoodd/a11y.css-webextension"
	},
	"bugs": {
		"url": "https://github.com/ffoodd/a11y.css-webextension/issues"
	},
	"browserslist": [
		"last 1 versions"
	],
	"dependencies": {
		"a11y.css": "^5.2.0"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.2.0",
		"cross-env": "^7.0.3",
		"cssnano": "^6.0.1",
		"json": "^11.0.0",
		"postcss": "^8.4.16",
		"postcss-cli": "^10.1.0",
		"sass": "^1.63.6",
		"shx": "^0.3.4",
		"stylelint": "^15.9.0",
		"stylelint-config-recommended": "^12.0.0",
		"stylelint-config-standard-scss": "^10.0.0",
		"stylelint-stylistic": "^0.4.2",
		"web-ext": "^7.6.2"
	},
	"webExt": {
		"artifactsDir": "./",
		"ignoreFiles": [
			"package.json",
			"package-lock.json",
			"manifest-*.json",
			"sass",
			"temp"
		],
		"build": {
			"overwriteDest": true
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard-scss",
			"stylelint-stylistic/config"
		],
		"rules": {
			"stylistic/indentation": "tab",
			"stylistic/string-quotes": null,
			"stylistic/number-leading-zero": null,
			"at-rule-empty-line-before": null,
			"color-function-notation": null
		}
	}
}
